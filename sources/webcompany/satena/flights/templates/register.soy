                        <div class="{css trayectoVueloTarjeta}">
                            <div class="{css detalleVuelo300}">
                                <span class="{css ciudadLlegadaVuelosTarjeta}">{$tcFlightSegmentField['departureCityField']} {$tcFlightSegmentField['departureAirportNameField']}</span>
                                <span class="{css ciudadSalidaVuelosTarjeta}">{$tcFlightSegmentField['arrivalCityNameField']} {$tcFlightSegmentField['arrivalAirPortNameField']}</span>
                            </div>
                            <div class="{css detalleVuelo300}" style="margin-bottom: 10px;">
                                <span class="{css fechaLlegadaVuelosTarjeta}">{$tcFlightSegmentField['departureDateField']}</span>
                                <span class="{css fechaSalidaVuelosTarjeta}">{$tcFlightSegmentField['arrivalDateField']}</span>
                            </div>
                            <div class="{css logoAerolineaVueloTarjeta}">
                                <img src="http://search.technocloud.com.co/static/images/airline/{$tcFlightSegmentField['airLineOperatedField']}.gif" style="border-width: 0px;">
                            </div>
