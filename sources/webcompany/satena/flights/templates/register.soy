    <div class="{css contresultuno}">
        <div class="{css contresultunoi}">
            <div>
                <a class="{css btnreturnresults} {css background-color} {css border-color} {css text-color}" href="javascript:void(0);">Volver a resultados</a>
            </div>
            <div>
                <a class="{css guidesteps11}" href="javascript:void(0);">1 Resultados </a>
            </div>
            <div>
                <a class="{css guidesteps22} {css background-color} {css border-color} {css text-color}" href="javascript:void(0);">2 Solicitar </a>
            </div>
            <div>
                <a class="{css guidesteps33}" href="javascript:void(0);">3 Comprar </a>
            </div>
        </div>
    </div>

    <div class="{css row-col}">
        <div class="{css col4} {css push8} {css col5-medium} {css push7-medium} {css col12-small} {css push0-small} {css purchase-info}">
            <div class="{css panelDerechoReservaVuelos} {css border-color}">
