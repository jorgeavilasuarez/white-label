                    <span class="{css text-color}" style="float: left;">Valor total a pagar: &nbsp;</span>
                    <span class="{css text-color}" style="float: left;">{$segmentSelected['currencyCodeLocalField']}
                        &nbsp; {$segmentSelected['amountCurrencyShowField']}
                    </span>
                </div>
                <div class="{css reservaTarifasVuelosTarjeta}">

                    <div class="{css detalleTarifaVuelosTarjeta}">
                        <div class="{css renglonValorPorPasajero}">
                            <div style="float: left; width: 160px; text-align: left;">
                                <span style="float: left;">Valor por un &nbsp; </span>
                                <span style="float: left;">Adulto&nbsp;
                                </span>
                            </div>

                            {foreach $tcPassengerTypeField in $segmentSelected['tcPassengerTypeField']}
                               
                            <a class="{css impuestosVuelos}" href="#this" style="float: left; padding: 0; width: auto;">
                                <span class="{css valorTarifaVuelosTarjeta}" style="float: left; text-align: left; width: 85px;">
                                    <span>{$tcPassengerTypeField['currencyCodeShowField']}&nbsp;{$tcPassengerTypeField['passengerPriceShowField']}</span>
                                </span>
                            </a>
                            {/foreach}
                                                   
                        </div>
                    </div>
                    <div class="{css divisorAzul300}">
                    </div>
                </div>
                <div class="{css reservaTituloVuelosTarjeta300}">
